{
  "name": "@sentry/core",
  "version": "0.3.0",
  "description": "Sentry core implementation for all JavaScript related SDKs",
  "author": "Sentry",
  "license": "MIT",
  "engines": {
    "node": ">=6"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "npm-run-all": "*",
    "prettier": "*",
    "rollup": "*",
    "tslint": "*",
    "typescript": "*",
    "karma": "*"
  },
  "scripts": {
    "build": "run-s build:compile",
    "build:compile": "tsc --project tsconfig.json",
    "lint": "tslint --config ../../.tslintrc.json src/**/*",
    "format": "prettier --config ../../.prettierrc.json src/**/* --write",
    "test": "karma start ../../karma.config.js",
    "test:watch": "run-s 'test --auto-watch --no-single-run'"
  }
}
