{
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@sentry/*": ["./*/src"]
    },
    "declaration": true,
    "stripInternal": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "target": "es5",
    "types": ["node"],
    "lib": ["es2015"],
    "allowJs": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "inlineSources": true
  }
}
